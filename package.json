{
  "name": "schema-validation-starter",
  "version": "1.0.0",
  "description": "Schema Validation Application with tRPC Backend and React Frontend",
  "scripts": {
    "install:all": "npm install && cd client && npm install && cd ../api && npm install",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd api && npm run dev:server",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "build:client": "cd client && npm run build",
    "build:server": "cd api && npm run build",
    "build": "npm run build:server && npm run build:client",
    "lint:client": "cd client && npm run lint",
    "test:client": "cd client && npm run test",
    "clean": "rimraf client/dist api/dist"
  },
  "keywords": [
    "react",
    "typescript",
    "trpc",
    "zod",
    "schema-validation"
  ],
  "author": "Marian Mrva",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.0",
    "rimraf": "^5.0.1",
    "vitest": "^2.1.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@trpc/client": "^10.45.2",
    "@trpc/react-query": "^10.45.2"
  }
}
